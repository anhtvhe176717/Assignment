<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controrller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>controrller.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>controrller.LogOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Personnel</servlet-name>
        <servlet-class>controrller.HandlePersonnel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePerson</servlet-name>
        <servlet-class>controrller.UpdatePerson</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPersonnel</servlet-name>
        <servlet-class>controrller.AddPersonnel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleDepartment</servlet-name>
        <servlet-class>controrller.HandleDepartment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePerson</servlet-name>
        <servlet-class>controrller.DeletePerson</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchDepart</servlet-name>
        <servlet-class>controrller.SearchDepart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleProject</servlet-name>
        <servlet-class>controrller.HandleProject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HdProject</servlet-name>
        <servlet-class>controrller.HdProject</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Personnel</servlet-name>
        <url-pattern>/personnel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePerson</servlet-name>
        <url-pattern>/updateperson</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPersonnel</servlet-name>
        <url-pattern>/addperson</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleDepartment</servlet-name>
        <url-pattern>/department</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePerson</servlet-name>
        <url-pattern>/deleteperson</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchDepart</servlet-name>
        <url-pattern>/searchdepart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleProject</servlet-name>
        <url-pattern>/project</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HdProject</servlet-name>
        <url-pattern>/hdproject</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
